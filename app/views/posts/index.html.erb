<h1>Posts</h1>

<%= link_to "Write a new post", new_post_path %> 

<% @posts.each do |post| %>

  <div>
    <h2><%= post.title %><br/></h2>
    <% if cookies[:remember_token] %>
      <p>Author: <%= User.find(post.user_id).name %></p>
    <% else %>
      <p>Author: Anonymous</p>
    <% end %>
    <p><%= post.content %></p>
    
  </div>
  
<% end %>
